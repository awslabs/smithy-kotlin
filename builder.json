{
    "name": "smithy-kotlin",
    "needs_compiler": false,
    "packages": [],
    "variables": {
        "gradlew": "{source_dir}/gradlew -p {source_dir}"
    },
    "build_steps": [
        "pwd",
        "{gradlew} assemble" 
    ],
    "post_build_steps": [
        "{gradlew} publishToMavenLocal" 
    ],
    "test_steps": [
        "{gradlew} test allTests"
    ],
    "imports": [
        "JDK8"
    ],
    "build_dir": "target/build",
    "env": {
        "JAVA_HOME": "{java_home}"
    },
    "downstream": [
        { "name": "aws-sdk-kotlin" }    
    ],
    "hosts": {
        "ubuntu": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        },
        "debian": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        }
    }
}
